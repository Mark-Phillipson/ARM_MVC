@using Microsoft.AspNetCore.Components.Web
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ARM MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ARM_MVC.styles.css" asp-append-version="true" />
    <base href="~/" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body style="overflow-x:hidden">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ARM MVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">

                        </li>
                        <li class="nav-item">

                        </li>
                        <li class="nav-item">

                        </li>
                    </ul>
                    <p class="nav navbar-text">Hello, @User.Identity?.Name! Authentication type @User.Identity?.AuthenticationType Is Authenticated: @User.Identity?.IsAuthenticated</p>
                </div>
            </div>
        </nav>
    </header>
    @*https://docs.microsoft.com/en-us/aspnet/core/mvc/views/view-components?view=aspnetcore-6.0*@
    <div class="row">
        <div class="col-2">
            <nav class="navbar bg-dark">
                <ul class="nav navbar-nav">
                    <li class="nav-item m-2">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home (BasicUser)</a>
                    </li>
                    <li class="nav-item m-2">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy (Admin)</a>
                    </li>
                    @if (User.IsInRole("SuperUser"))
                    {
                        <li class="nav-item m-2">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Test">Test (SuperUser)</a>
                        </li>
                    }
                    <li class="nav-item m-2">
                        <a  class="nav-link text-light" href="/routable-counter">Blazor Counter</a>
                    </li>
                    <li class="dropdown m-2">
                        <button class="btn dropdown-toggle text-light" type="button" id="dropdownMenu2" data-bs-toggle="dropdown"
                                aria-expanded="false">
                            Dropdown Example
                        </button>
                        <ul class="dropdown-menu bg-dark" aria-labelledby="dropdownMenu2">
                            <li class="nav-item m-3">
                                <a class="btn dropdown-item text-light nav-link" asp-area="" asp-controller="Home" asp-action="Test">
                                    Test (SuperUser)
                                </a>
                            </li>
                            <li class="nav-item m-3"><button class="dropdown-item text-light nav-link" type="button">Action</button></li>
                            <li class="nav-item m-3"><button class="dropdown-item text-light nav-link" type="button">Another action</button></li>
                            <li class="nav-item m-3"><button class="dropdown-item text-light nav-link" type="button">Something else here</button></li>
                        </ul>
                    </li>

                    <!-- Split dropend button -->
                    <li class="btn-group dropend m-2">
                        <button type="button" class="btn btn-secondary bg-dark">
                            Split dropend
                        </button>
                        <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown"
                                aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropright</span>
                        </button>
                        <ul class="dropdown-menu bg-dark">
                            <li><button class="dropdown-item text-light" type="button">Action</button></li>
                            <li><button class="dropdown-item text-light" type="button">Another action</button></li>
                            <li><button class="dropdown-item text-light" type="button">Something else here</button></li>

                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col-10">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - ARM MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="_framework/blazor.server.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
